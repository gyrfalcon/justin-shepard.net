{
  "name": "justin-shepard.net",
  "version": "1.0.0",
  "description": "Justin Shepard's personal website",
  "author": "Justin Shepard <justin.shepard@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server",
    "lint": "eslint --ext .js,.jsx src",
    "test:acceptance": "cucumber-js --exit --require-module @babel/register --require tests tests/features",
    "test:coverage": "flow-coverage-report"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.0.0",
    "@babel/runtime": "7.2.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "cucumber": "5.1.0",
    "eslint": "5.11.1",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.0",
    "eslint-plugin-standard": "4.0.0",
    "express": "4.16.4",
    "flow-bin": "0.89.0",
    "flow-coverage-report": "0.6.1",
    "flow-typed": "2.5.1",
    "html-webpack-plugin": "3.2.0",
    "nightwatch": "1.0.17",
    "nightwatch-api": "2.1.0",
    "path": "0.12.7",
    "webpack": "4.28.3",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "react": "16.7.0",
    "react-dom": "16.7.0"
  },
  "flow-coverage-report": {
    "concurrentFiles": 5,
    "globIncludePatterns": [
      "src/**/*.js",
      "src/**/*.jsx",
      "tests/**/*.js"
    ],
    "outputDir": "reports/flow",
    "threshold": 100,
    "reportTypes": [
      "html",
      "text"
    ]
  }
}
