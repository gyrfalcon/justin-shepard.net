{
  "name": "justin-shepard.net",
  "version": "1.0.0",
  "description": "Justin Shepard's personal website",
  "author": "Justin Shepard <justin.shepard@gmail.com>",
  "license": "MIT",
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "build": "parcel build",
    "ci:lint": "eslint --format junit --output-file reports/eslint/eslint.xml --ext .ts,.tsx src tests",
    "lint": "eslint --ext .ts,.tsx src tests",
    "start": "parcel",
    "test:acceptance": "playwright test",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@playwright/test": "1.40.1",
    "@types/jest": "29.5.11",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "buffer": "6.0.3",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.33.2",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "parcel": "2.10.3",
    "prettier": "3.1.1",
    "process": "0.11.10",
    "serve-static": "1.16.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "ajv": "8.12.0",
    "axios": "1.7.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.21.0"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "ignorePatterns": [
      "webpack.config.js",
      "playwright.config.js"
    ]
  }
}
