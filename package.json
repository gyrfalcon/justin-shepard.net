{
  "name": "justin-shepard.net",
  "version": "1.0.0",
  "description": "Justin Shepard's personal website",
  "author": "Justin Shepard <justin.shepard@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server",
    "lint": "eslint --ext .js,.jsx src",
    "ci:lint": "eslint --format junit --output-file reports/eslint/eslint.xml --ext .js,.jsx src",
    "ci:flow": "flow --json | yarn --silent flow-junit-transformer > reports/flow/flow.xml",
    "test:acceptance": "cucumber-js --exit --format json:reports/cucumber/tests.cucumber --require-module @babel/register --require tests tests/features",
    "test:coverage": "flow-coverage-report"
  },
  "devDependencies": {
    "@babel/core": "7.5.4",
    "@babel/plugin-transform-runtime": "7.5.0",
    "@babel/preset-env": "7.5.4",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/register": "7.4.4",
    "@babel/runtime": "7.5.4",
    "@kironeducation/flow-junit-transformer": "0.3.0",
    "babel-eslint": "10.0.2",
    "babel-loader": "8.0.6",
    "chromedriver": "75.1.0",
    "cucumber": "5.1.0",
    "eslint": "6.0.1",
    "eslint-config-standard": "13.0.1",
    "eslint-plugin-flowtype": "3.11.1",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.14.2",
    "eslint-plugin-standard": "4.0.0",
    "express": "4.17.1",
    "flow-bin": "0.88.0",
    "flow-coverage-report": "0.6.1",
    "flow-typed": "2.5.2",
    "html-webpack-plugin": "3.2.0",
    "nightwatch": "1.1.13",
    "nightwatch-api": "2.3.0",
    "path": "0.12.7",
    "webpack": "4.35.3",
    "webpack-cli": "3.3.6",
    "webpack-dev-server": "3.7.2"
  },
  "dependencies": {
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "flow-coverage-report": {
    "concurrentFiles": 5,
    "globIncludePatterns": [
      "src/**/*.js",
      "src/**/*.jsx",
      "tests/**/*.js"
    ],
    "outputDir": "reports/coverage",
    "threshold": 100,
    "reportTypes": [
      "html",
      "text",
      "json"
    ]
  }
}
